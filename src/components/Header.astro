---
import LogoIEEEETITC from '@assets/branding/ieee-etitc.webp';
import {menuItem} from "@utils/menu";
import {Icon} from "astro-icon/components";
---

<header class=`bg-white h-24 shadow sticky top-0 left-0 z-10 header-component ease-in-out duration-300`>
    <div class="relative lg:container mx-auto flex items-center justify-between h-full">
        <figure class="h-14 pl-4 lg:p-0">
            <a href="/" rel="noreferrer" class="flex w-full text-white h-full items-center gap-3">
                <img class="h-full p-1 bg-white rounded-lg" src={LogoIEEEETITC.src} alt="IEEE Logo " title="IEEE Logo">
                <span class="font-title text-blueProject text-lg lg:text-2xl font-bold uppercase" translate="no">ieee etitc</span>
            </a>
        </figure>
        <nav id="menu-list" class=" absolute lg:static top-24 bg-white
        lg:bg-transparent w-full lg:w-1/2 p-5 shadow lg:shadow-none hidden lg:block ease-linear duration-300">
            <ul class="flex lg:items-center flex-col lg:flex-row lg:justify-around gap-4">
                {
                    menuItem.map(item =>
                            <li>
                                <a class=`font-bold lg:text-lg font-title
                                ${(item.url === Astro.url.pathname) ? 'text-greenProjectAccent' : 'text-shark'}` href={item.url}>
                                    {item.name}
                                </a>
                            </li>
                    )
                }
            </ul>
        </nav>
        <button id="btn-header" class="pr-4 lg:p-0 lg:hidden">
            <Icon name="ui/burger-menu" size={32} class="text-blueProject"/>
        </button>
    </div>
</header>

